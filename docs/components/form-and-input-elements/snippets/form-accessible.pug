title: Form Group
layout: demo.pug
---

include ../../../mixins.pug

.form(novalidate)
  fieldset
    legend A set of distinct fields
    .form__group
      .form__group__label
        label.form__group__label__text Firstname
          span(aria-hidden="true") *
      .form__group__control
        input(type='text', placeholder='e.g. Max', aria-required="true", required).control.control--input
    .form__group
      .form__group__label.form__group__label--invalid
        .form__group__label__text Lastname
          span(aria-hidden="true") *
      .form__group__control
        input(type='text', required, aria-required="true", aria-invalid="true", aria-describedby="lastname-error").control.control--input.has-error
        .form__error-message#lastname-error Your name can't contain a number.
  fieldset
    legend Another set of distinct fields
    .form__group
      .form__group__label
        .form__group__label__info-icon
          a.info-icon(data-info, area-describedby='#target', data-target='#target', href='#', role='button')
            +svg('info', 'info-icon__svg')
            +svg('close', ['info-icon__svg', 'info-icon__svg--close'])
        .form__group__label__info-icon-text-wrapper Form group with info
      .form__group__control
        input(type='text', aria-describedby="info-1").control.control--input
        .form__info-text(style='display: none;', role='tooltip')#target
          .info-text#info-1
            p.paragraph Some meaningful explanation may be placed here
    .form__group
      .form__group__label
        .form__group__label__info-icon
          a.info-icon(data-info, area-describedby='#target', data-target='#target', href='#', role='button')
            +svg('info', 'info-icon__svg')
            +svg('close', ['info-icon__svg', 'info-icon__svg--close'])
        .form__group__label__info-icon-text-wrapper Form group with info
      .form__group__control
        input(type='text', aria-describedby="info-1").control.control--input
        .form__info-text(style='display: none;', role='tooltip')#target
          .info-text#info-1
            p.paragraph Some meaningful explanation may be placed here
  .form__group
    .form__group__label Password
    .form__group__control
      input(type='password', id='password').control.control--input
      label.checkbox(data-checkbox)
        input.checkbox__checkbox(type='checkbox', onchange="$('#password').attr('type', this.checked ? 'text' : 'password')")
        .checkbox__label
          +svg('checkmark', 'checkbox__label__icon')
          .checkbox__label__text show password
  .form__group
    .from__group__control.form__group__control--fullwidth
      label.checkbox(data-checkbox)
        input.checkbox__checkbox(type='checkbox')
        .checkbox__label
          +svg('checkmark', 'checkbox__label__icon')
          .checkbox__label__text Full width control
  .form__footnote * Form footnote

