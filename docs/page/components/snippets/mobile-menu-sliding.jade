---
title: Sliding Mobile Menu
template: demo.jade
---

include /components/includes/mixins.jade

nav.mobile-menu.mobile-menu--sliding(data-menu='sliding')
  ul.mobile-menu__level(data-level)
    li.mobile-menu__item
      a.mobile-menu__link(href='#', data-link) Home

    li.mobile-menu__item
      a.mobile-menu__link.mobile-menu__link--parent(href='#', data-link)
        span.mobile-menu__text Individuals
        +svg('arrow-right', ['mobile-menu__link__parent-icon', 'icon'])
      
      ul.mobile-menu__level(data-level)
        li.mobile-menu__item.mobile-menu__item--back
          a.mobile-menu__link.mobile-menu__link--back(href='#', data-back)
            +svg('arrow-left', ['mobile-menu__link__back-icon', 'icon'])
            span.mobile-menu__text back
        
        li.mobile-menu__item.mobile-menu__item--section
          .mobile-menu__link.mobile-menu__link--section
            span.mobile-menu__text Individuals
        li.mobile-menu__item
          a.mobile-menu__link(href='#', data-link)
            span.mobile-menu__text Contents Insurance
        li.mobile-menu__item
          a.mobile-menu__link(href='#', data-link)
            span.mobile-menu__text Liability Insurance
        li.mobile-menu__item
          a.mobile-menu__link.mobile-menu__link--parent(href='#', data-link)
            span.mobile-menu__text Services
            +svg('arrow-right', ['mobile-menu__link__parent-icon', 'icon'])
          
          ul.mobile-menu__level(data-level)
            li.mobile-menu__item.mobile-menu__item--back
              a.mobile-menu__link.mobile-menu__link--back(href='#', data-back)
                +svg('arrow-left', ['mobile-menu__link__back-icon', 'icon'])
                span.mobile-menu__text back

            li.mobile-menu__item.mobile-menu__item--section
              .mobile-menu__link.mobile-menu__link--section
                span.mobile-menu__text Services
            li.mobile-menu__item
              a.mobile-menu__link(href='#', data-link)
                span.mobile-menu__text Overview
            li.mobile-menu__item
              a.mobile-menu__link(href='#', data-link)
                span.mobile-menu__text Claims
            li.mobile-menu__item
              a.mobile-menu__link(href='#', data-link)
                span.mobile-menu__text Contracts
            li.mobile-menu__item
              a.mobile-menu__link(href='#', data-link)
                span.mobile-menu__text Calculators

    li.mobile-menu__item
      a.mobile-menu__link.mobile-menu__link--parent(href='#', data-link)
        span.mobile-menu__text Business
        +svg('arrow-right', ['mobile-menu__link__parent-icon', 'icon'])

      ul.mobile-menu__level(data-level)
        li.mobile-menu__item.mobile-menu__item--back
          a.mobile-menu__link.mobile-menu__link--back(href='#', data-back)
            +svg('arrow-left', ['mobile-menu__link__back-icon', 'icon'])
            span.mobile-menu__text back
    
        li.mobile-menu__item.mobile-menu__item--section
          .mobile-menu__link.mobile-menu__link--section
            span.mobile-menu__text Business
        li.mobile-menu__item
          a.mobile-menu__link(href='#', data-link)
            span.mobile-menu__text Expatriates
        li.mobile-menu__item
          a.mobile-menu__link(href='#', data-link)
            span.mobile-menu__text Online client service
    
