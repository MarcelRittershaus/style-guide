include ../../mixins.pug

doctype html
html
  include ../head.pug

  body.site(data-site)
    .site__page(data-page)
      .site__page__mask(data-mask)
      header.header
        .header__meta
          .header__meta__container
            .header__meta__row
              ul.header__meta__item.header__meta__item--menu.meta-menu
                li.meta-menu__item
                  a.meta-menu__link(href="#") Privatkunden
                li.meta-menu__item.is-active
                  a.meta-menu__link.is-active(href="#") Unternehmenskunden
                li.meta-menu__item
                  a.meta-menu__link(href="#") Über AXA
              form.header__meta__item.header__meta__item--search.header-search(action="#")
                input.header-search__input(type='text')
                button.header-search__button(type="submit")
                  +svg('search', ['header-search__icon', 'icon'])
              .header__meta__item.header__meta__item--language.meta-language
                a.meta-language__button(href="#") Deutsch
              a.header__meta__item.header__meta__item--action(href="#") myAXA Login
        .header__main
          .header__main__container
            .header__main__row
              a.header__main__item.header__main__item--brand.brand(href="#")
                img.brand__image(src=relative('/images/logo.svg'), alt='AXA logo')
              ul.header__main__item.header__main__item--menu.menu-main(data-menu="main")
                li.menu-main__item.is-active(data-item)
                  a.menu-main__link.is-active(href="#", data-link) Versicherungen & Mehr
                  .menu-main__panel(data-panel) Versicherungen & Mehr
                li.menu-main__item(data-item)
                  a.menu-main__link(href="#", data-link) Schaden
                  .menu-main__panel(data-panel)
                    .row
                      .column.column--4
                        h2 Wohnen & Eigentum
                        ul.menu
                          li.menu__item
                            a.menu__link(href="#") Haushaltversicherung
                          li.menu__item
                            a.menu__link(href="#") Hausratversicherung
                          li.menu__item
                            a.menu__link(href="#") Privathaftpflichtversicherung
                          li.menu__item
                            a.menu__link(href="#") Rechtsschutzversicherung
                      .column.column--4
                        h2 Fahrzeug & Reise
                        ul.menu
                          li.menu__item
                            a.menu__link(href="#") Autoversicherung
                          li.menu__item
                            a.menu__link(href="#") Autoversicherung für Elektroautos
                          li.menu__item
                            a.menu__link(href="#") Motorradversicherung
                          li.menu__item
                            a.menu__link(href="#") Rechtschutzversicherung
                      .column.column--4
                        h2 Vorsorge & Sparen
                        ul.menu
                          li.menu__item
                            a.menu__link(href="#") Lebenversicherung
                          li.menu__item
                            a.menu__link(href="#") Finanzprodukte
                          li.menu__item
                            a.menu__link(href="#") Fondsinformationen
                          li.menu__item
                            a.menu__link(href="#") Aktuelle Zinssätze

                li.menu-main__item(data-item)
                  a.menu-main__link(href="#", data-link) Kontakt & Hilfe
                  .menu-main__panel(data-panel) Kontakt & Hilfe
                li.menu-main__item(data-item)
                  a.menu-main__link(href="#", data-link) Prävention
                  .menu-main__panel(data-panel) Prävention
                li.menu-main__item(data-item)
                  a.menu-main__link(href="#", data-link) Kundenportale
                  .menu-main__panel(data-panel) Kundenportale

              .header__main__item.header__main__item--mobile-actions.mobile-actions
                a.mobile-actions__item(href="#")
                  +svg('search', ['mobile-actions__icon', 'icon'])
                a.mobile-actions__item.site__burger(data-burger, href="#")
                  svg.mobile-actions__icon.icon.burger-icon(data-burger)
                    g(stroke="currentColor", stroke-width="2", fill="none", fill-rule="evenodd")
                      path.burger-icon__top(d="M0,5 L24,5")
                      path.burger-icon__middle(d="M0,12 L24,12")
                      path.burger-icon__bottom(d="M0,19 L24,19")

      .page-content
        .row
          .column.column--12
            h1 Welcome

        .row
          .column.column--9
            p.paragraph.
              Bacon ipsum dolor sit amet chicken sirloin ball tip, capicola short ribs
              bresaola boudin ribeye ground round shankle shoulder frankfurter pork loin
              beef ribs. T-bone biltong ham hock short loin. Capicola pork short ribs
              pastrami tri-tip frankfurter pork chop meatloaf tenderloin hamburger ham
              hock swine porchetta ball tip brisket. Pork fatback meatball ham hock.
              Doner brisket venison ribeye, tongue strip steak jerky shankle sausage
              cow jowl kevin. Shankle turducken andouille sausage pig, sirloin meatball
              doner turkey ball tip pork chop pastrami spare ribs beef biltong.
              Biltong tri-tip venison porchetta rump leberkas short loin drumstick
              ham hock.

          .column.column--3
            p.paragraph.
              Turkey biltong beef ribs tail pork loin tongue pork belly pork chop
              pastrami short ribs capicola. Ground round biltong beef ribs,
              chicken ribeye shoulder short ribs porchetta landjaeger.
              Ribeye tri-tip beef ball tip, ham landjaeger prosciutto rump strip
              steak tongue meatloaf. T-bone cow andouille landjaeger.

      footer.footer
        .footer__main
          .footer__main__container
            .footer__main__row
              section.footer__social.footer-social
                h3.footer-social__headline In Kontakt bleiben
                ul.footer-social__items
                  li.footer-social__item
                    a.footer-social__link(href="#")
                      +svg('facebook', ['footer-social__icon'])
                  li.footer-social__item
                    a.footer-social__link(href="#")
                      +svg('twitter', ['footer-social__icon'])
                  li.footer-social__item
                    a.footer-social__link(href="#")
                      +svg('xing', ['footer-social__icon'])
                  li.footer-social__item
                    a.footer-social__link(href="#")
                      +svg('youtube', ['footer-social__icon'])
                  li.footer-social__item
                    a.footer-social__link(href="#")
                      +svg('linked-in', ['footer-social__icon'])

              section.footer__links.footer-links
                h3.footer-links__headline AXA & Sie
                ul.footer-links__menu
                  li.footer-links__item
                    a.footer-links__link(href="#")
                      span.footer-links__text Unternehmenskunden
                      +svg('arrow-right', ['footer-links__icon'])
                  li.footer-links__item
                    a.footer-links__link(href="#")
                      span.footer-links__text Stellenangebote
                      +svg('arrow-right', ['footer-links__icon'])
                  li.footer-links__item
                    a.footer-links__link(href="#")
                      span.footer-links__text Schaden melden
                      +svg('arrow-right', ['footer-links__icon'])
                  li.footer-links__item
                    a.footer-links__link(href="#")
                      span.footer-links__text myAXA
                      +svg('arrow-right', ['footer-links__icon'])
                  li.footer-links__item
                    a.footer-links__link(href="#")
                      span.footer-links__text Broker
                      +svg('arrow-right', ['footer-links__icon'])
                  li.footer-links__item
                    a.footer-links__link(href="#")
                      span.footer-links__text Medien
                      +svg('arrow-right', ['footer-links__icon'])
                  li.footer-links__item
                    a.footer-links__link(href="#")
                      span.footer-links__text Blog
                      +svg('arrow-right', ['footer-links__icon'])

              section.footer__worldwide.footer-worldwide
                .footer-worldwide__headline AXA weltweit
                ul.footer-worldwide__entities
                  li.footer-worldwide__entity(href="#")
                    a.footer-worldwide__link(href="#")
                      span.footer-worldwide__text AXA weltweit
                      +svg('arrow-right', ['footer-worldwide__icon'])
                      img.footer-worldwide__image(src=relative('/images/axa-world.svg'))

        .footer__copyline.footer-copyline
          .footer-copyline__container
            span.footer-copyline__notice © 2015 AXA Versicherungen AG
            ul.footer-copyline__entries
              li.footer-copyline__item
                a.footer-copyline__link(href="#") Impressum
              li.footer-copyline__item
                a.footer-copyline__link(href="#") Nutzungshinweise
              li.footer-copyline__item
                a.footer-copyline__link(href="#") Datenschutz

    .site__mobile.mobile(data-mobile)
      .row
        .column.mobile__section
          .dropdown(data-dropdown)
            .dropdown__label(data-dropdown-label)
              +svg('arrow-bottom', 'dropdown__label__icon')
              .dropdown__label__text(data-dropdown-text)
            select.dropdown__select(data-dropdown-select)
              option Privatkunden
              option Unternehmenskunden
              option Über AXA

      .row
        nav#menu-mobile.column.mobile-menu.mobile-menu--sliding(data-menu='sliding')
          ul.mobile-menu__level(data-level)
            li.mobile-menu__item
              a.mobile-menu__link(href='#', data-link) Übersicht

            li.mobile-menu__item
              a.mobile-menu__link.mobile-menu__link--parent(href='#', data-link)
                span.mobile-menu__text Versicherungen & Mehr
                +svg('arrow-right', ['mobile-menu__link__parent-icon', 'icon'])

              ul#active-level.mobile-menu__level(data-level)
                li.mobile-menu__item.mobile-menu__item--back
                  a.mobile-menu__link.mobile-menu__link--back(href='#', data-back)
                    +svg('arrow-left', ['mobile-menu__link__back-icon', 'icon'])
                    span.mobile-menu__text zurück

                li.mobile-menu__item.mobile-menu__item--section
                  .mobile-menu__link.mobile-menu__link--section
                    span.mobile-menu__text Versicherungen & Mehr
                li.mobile-menu__item
                  a.mobile-menu__link(href='#', data-link)
                    span.mobile-menu__text Wohnen & Eigentum
                li.mobile-menu__item
                  a.mobile-menu__link(href='#', data-link)
                    span.mobile-menu__text Fahrzeug & Reise
                li.mobile-menu__item
                  a.mobile-menu__link(href='#', data-link)
                    span.mobile-menu__text Vorsorge & Sparen

            li.mobile-menu__item
              a.mobile-menu__link.mobile-menu__link--parent(href='#', data-link)
                span.mobile-menu__text Kontakt & Hilfe
                +svg('arrow-right', ['mobile-menu__link__parent-icon', 'icon'])

              ul.mobile-menu__level(data-level)
                li.mobile-menu__item.mobile-menu__item--back
                  a.mobile-menu__link.mobile-menu__link--back(href='#', data-back)
                    +svg('arrow-left', ['mobile-menu__link__back-icon', 'icon'])
                    span.mobile-menu__text zurück

                li.mobile-menu__item.mobile-menu__item--section
                  .mobile-menu__link.mobile-menu__link--section
                    span.mobile-menu__text Kontakt & Hilfe
                li.mobile-menu__item
                  a.mobile-menu__link(href='#', data-link)
                    span.mobile-menu__text Schaden melden
                li.mobile-menu__item
                  a.mobile-menu__link(href='#', data-link)
                    span.mobile-menu__text Berater suchen

            li.mobile-menu__item
              a.mobile-menu__link(href='#', data-link)
                span.mobile-menu__text Prävention

            li.mobile-menu__item
              a.mobile-menu__link(href='#', data-link)
                span.mobile-menu__text Kundenportale

      .row
        .column.mobile__separator

      .row
        .column.list-group
          a.list-group__item.list-group__item--link(href="#")
            img.list-group__avatar(src="https://avatars3.githubusercontent.com/u/198988?v=3&s=460")
            span.list-group__text David Knezić
          a.list-group__item.list-group__item--link(href="#")
            +svg('feedback', ['list-group__icon'])
            span.list-group__text Kontakt

      .row
        ul.column.mobile__section
          .mobile-languages
            li.mobile-languages__items.is-active
              a.mobile-languages__link.is-active(href="#") DE
            li.mobile-languages__items
              a.mobile-languages__link(href="#") FR
            li.mobile-languages__items
              a.mobile-languages__link(href="#") IT
            li.mobile-languages__items
              a.mobile-languages__link(href="#") EN


    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/bacon.js/0.7.80/Bacon.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/iframe-resizer/3.5.1/iframeResizer.min.js")
    script(src=relative('/js/style-guide-docs.js'))

    if process.env.NODE_ENV === 'production'
      script(src=relative('/dist/docs.min.js'))
      link(rel="stylesheet", href=relative("/dist/docs.min.css"))
    else
      script(src='/dist/bundle.js')
    
    script(type='text/javascript').
      var $menu = $('#menu-mobile');
      var $activeLevel = $('#active-level');

      $menu.slidingMenu();
      $menu.slidingMenu('level', $activeLevel);

